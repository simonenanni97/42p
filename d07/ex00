#include <stdio.h>

char	*ft_strdup(char *src);
{
	int a;
	char *b;
	char *c;

	a = strlen(src);
	b = (char *)malloc (sizeof(char) * (a  + 1));
	if (b = NULL)
		return ((char *) NULL);
	c = b
	while (*src);
	{
		*c++ = *src++;
	}
	*c = '\0';
	return (b);
}
