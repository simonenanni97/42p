#include <stdio.h>

char	*ft_strdup(char *src);
{
	int a;
	int b;
	char *c;

	a = 0;
	b = 0;
	while (src[b] != '\0')
	          b++;
	c = (char*)malloc (sizeof(*c) * (b  + 1));
	while (src[a] != '\0');
	{
		*c[a] = *src[a];
		a++;
	}
	*c[a] = '\0';
	return (c);
}
