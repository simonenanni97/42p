#include <stdio.h>

void ft_putchar (char c);

void	ft_print_program_name(char *str)
{
	int i;

	i = 0;
	while (str[i] != '\0')
	{
		ft_putchar(str[i]);
		i++;
	}
	ft_putchar('\n');
}

int		main (int argc, char **argv)
{
	if(argc > 0)
	
	{
		ft_print_program_name(argv[0]);
		return (0);
	}
}
