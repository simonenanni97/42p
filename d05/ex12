#include <stdio.h>

int		ft_str_is_numeric(char *str)
{
	int a;
	int b;

	a = 0;
	while (str[a] != '\0')
	{
		if (str[a] >= '1' && str[a] <= '9')
		{
			b = 1;
		}
		else
		{
			return(0);
		}
		a++;
	}
	return(b);
}
