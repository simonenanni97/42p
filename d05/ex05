#include <string.h>

char	*ft_strstr(char *str, char *to_find)
{
	int a;
	int b;

	a = 0;
	while (str[a] != '\0')
	{
		b = 0;
		while (str[a + b] == to_find[b])
		{
			b++;
			if (to_find[b] == '\0')
			{
				return (str + 1);
			}
		}
		a++;
	}
	return (0);
}
