#include <string.h>

int ft_atoi(char *str)
{
	int a = 0;

	if (str)
	{
		while (*str && *str <= '9' && *str >= '0')
		{
			a = (a * 10) + (*str - 0);
			*str++
		}
	}
	return (str);
}
